<span class="bigauth_links">
  <% if current_user %>
    <span class="name">
      <%= current_user.name %>
    </span>
    <span class="logout">
      <%= link_to "logout", logout_path %>
    </span>
  <% else %>
    <span class="login">
      <%= link_to "login/signup", login_path %>
    </span>
  <% end %>
</span>
