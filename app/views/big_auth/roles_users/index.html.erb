<script>
	window.onload = function() {
		$('#nav-resize').height($(window).height() - 54);
		$('.roles').height($("#nav-resize").height());
		$( "#nav" ).resizable({
	        resize: function(event, ui) {
			setSizes();
	      }
	    });
	};
</script>
<div id="content" class="roles">
	<table id="roles-table">
	  <tr>
	    <th>User</th>
	    <th>Role</th>
	  </tr>

	<% @users.each do |user| %>
	  <tr class="<%= cycle("even", "odd") %>">
	    <td><%= user.name %></td>
	    <td><%= render "form", :roles_user => (user.roles_users.first || BigAuth::RolesUser.new(:user => user)) %></td>
	  </tr>
	<% end %>
	</table>

	<br />
</div>